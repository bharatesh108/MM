<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/rl_terms_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/tv_terms_conditions_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/terms_accept_text_color"
            android:textSize="@dimen/font_size_13" />

        <RelativeLayout
            android:id="@+id/rl_accept"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tc_bottom_layout_height"
            android:layout_below="@+id/tv_terms_conditions_text"
            android:layout_marginBottom="@dimen/margin_50dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@color/color_white" >

            <Switch
                android:id="@+id/cb_accept"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_15dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_20dp" />

            <TextView
                android:id="@+id/tv_acceptance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/cb_accept"
                android:layout_marginEnd="@dimen/margin_23dp"
                android:layout_marginRight="@dimen/margin_23dp"
                android:layout_toRightOf="@+id/cb_accept"
                android:fontFamily="sans-serif-light"
                android:gravity="start"
                android:text="@string/tc_bottom_text"
                android:textColor="@color/terms_accept_text_color"
                android:textSize="@dimen/font_size_15" />

            <Button
                android:id="@+id/btn_continue"
                android:layout_width="@dimen/login_et_username_width"
                android:layout_height="@dimen/margin_33dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_acceptance"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="@dimen/margin_23dp"
                android:layout_marginLeft="@dimen/margin_20dp"
                android:layout_marginRight="@dimen/margin_23dp"
                android:layout_marginStart="@dimen/margin_20dp"
                android:layout_marginTop="@dimen/margin_10dp"
                android:background="@color/personal_details_divider"
                android:clickable="false"
                android:enabled="false"
                android:gravity="center"
                android:text="@string/btn_continue"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>