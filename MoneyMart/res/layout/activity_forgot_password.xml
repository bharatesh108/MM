<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/moneymart_login_bg_style" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_enter_username_customtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:fontFamily="sans-serif"
            android:text="@string/enter_username_customtext"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_13" />

        <EditText
            android:id="@+id/et_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:fontFamily="sans-serif-light"
            android:hint="@string/username"
            android:background="@color/color_transparent"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_17" 
            android:singleLine="true"
             android:textColor="@color/black_color"
             android:inputType="textNoSuggestions"
             android:cursorVisible="false"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <Button
            android:id="@+id/btn_set_forgot_password_submit"
            android:layout_width="@dimen/login_et_username_width"
            android:layout_height="@dimen/margin_31dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_30dp"
            android:background="@color/signin_header_bg"
            android:text="@string/submit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_forgot_username_customtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_50dp"
            android:fontFamily="sans-serif-light"
            android:text="@string/update_forgot_username_custom_text"
            android:textColor="@color/personal_details_data"
            android:textSize="@dimen/font_size_13" />

        <LinearLayout
            android:id="@+id/ll_forgot_username_phone_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_forgot_username_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:background="@drawable/phone"
                android:contentDescription="@string/phone_content" />

            <TextView
                android:id="@+id/tv_forgot_username_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_15dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/hyper_link" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forgot_username_hours_of_operations_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_forgot_username_hours_of_operations"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:background="@drawable/clock"
                android:contentDescription="@string/phone_content" />
            
            <TextView
                android:id="@+id/tv_forgot_username_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif"
                android:textColor="@color/timings_text_color" />
            
            <TextView
                android:id="@+id/tv_forgot_username_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_13"
                android:textColor="@color/personal_details_data" />
            
            
        </LinearLayout>

        <TextView
            android:id="@+id/tv_having_trouble_day_french"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_45dp"
            android:layout_marginStart="@dimen/margin_45dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/personal_details_data"
            android:textSize="@dimen/font_size_13"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_forgot_username_mail_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_forgot_username_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:background="@drawable/send_symbol"
                android:contentDescription="@string/mail_content" />

            <TextView
                android:id="@+id/tv_forgot_username_mail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_15dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/hyper_link" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_forgot_username_weburl_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_25dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/iv_forgot_username_weburl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_15dp"
                android:layout_marginStart="@dimen/margin_15dp"
                android:background="@drawable/web_site"
                android:contentDescription="@string/phone_content" />

            <TextView
                android:id="@+id/tv_forgot_username_weburl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_15dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif-light"
                android:textColor="@color/hyper_link" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>