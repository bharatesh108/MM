<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
            android:id="@+id/tv_payday_loans_custom_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/payday_loans_custom_text"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_16" />
    
     <TextView
            android:id="@+id/tv_payday_loans_custom_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:linksClickable="true"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_35dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/payday_loans_link"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_13" />
     
     <TextView
            android:id="@+id/tv_payday_loans_note"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_40dp"
            android:layout_marginLeft="@dimen/margin_20dp"
            android:layout_marginRight="@dimen/margin_20dp"
            android:layout_marginTop="@dimen/margin_35dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:visibility="visible"
            android:text="@string/payday_loans_note"
            android:textColor="@color/personal_details_data"
            android:textSize="@dimen/font_size_13" />
     
</LinearLayout>
