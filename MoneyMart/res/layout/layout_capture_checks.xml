<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/img_capture_lay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_front_check_tutorial_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/help"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl_front_check_capture"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:layout_toLeftOf="@+id/iv_front_check_tutorial_image"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_front_ok"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/margin_6dp"
                android:drawableTop="@drawable/download_check"
                android:fontFamily="sans-serif"
                android:text="@string/download_text"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_front_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="sans-serif"
                android:text="@string/front_ok"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_back_check_tutorial_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/help"
            android:visibility="invisible" />

        <RelativeLayout
            android:id="@+id/rl_back_check_capture"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_toLeftOf="@+id/iv_back_check_tutorial_image"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_back_ok"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/margin_6dp"
                android:drawableTop="@drawable/download_check"
                android:fontFamily="sans-serif"
                android:text="@string/download_text"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_back_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="sans-serif"
                android:text="@string/back_ok"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_void_check_tutorial_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:contentDescription="@string/content_description"
            android:src="@drawable/help" />

        <RelativeLayout
            android:id="@+id/rl_void_check_capture"
            android:layout_width="fill_parent"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:layout_toLeftOf="@+id/iv_void_check_tutorial_image"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_void_check_capture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_void_check_details"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/margin_6dp"
                android:drawableTop="@drawable/download_check"
                android:fontFamily="sans-serif"
                android:text="@string/download_text"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_void_check_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="sans-serif"
                android:text="@string/check_details"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>