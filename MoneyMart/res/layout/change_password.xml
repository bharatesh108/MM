<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_new_password_header_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/new_password_header_text"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_13"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/tv_new_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:fontFamily="sans-serif"
        android:text="@string/new_password"
        android:textColor="@color/account_details_enter_username_label"
        android:textSize="@dimen/font_size_13" />

    <TextView
        android:id="@+id/choose_specify_pwd_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/choose_specify_pwd_message"
        android:textColor="@color/message_text_color"
        android:textSize="@dimen/font_size_9"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/et_new_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/color_transparent"
        android:fontFamily="sans-serif-light"
        android:hint="@string/new_password_text"
        android:inputType="textPassword"
        android:textColor="@color/black_color"
        android:textColorHint="@color/account_details_enter_username_data"
        android:textSize="@dimen/font_size_18"
        android:maxLength="20"
        android:singleLine="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/tv_confirm_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_30dp"
        android:fontFamily="sans-serif"
        android:text="@string/confirm_password"
        android:textColor="@color/account_details_enter_username_label"
        android:textSize="@dimen/font_size_13" />

    <EditText
        android:id="@+id/et_confirm_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:background="@color/color_transparent"
        android:fontFamily="sans-serif-light"
        android:hint="@string/confirm_hint_password"
        android:inputType="textPassword"
        android:textColor="@color/black_color"
        android:textColorHint="@color/account_details_enter_username_data"
        android:textSize="@dimen/font_size_18" 
        android:maxLength="20"
        android:singleLine="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:background="@android:color/darker_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="@dimen/login_et_username_width"
            android:layout_height="@dimen/login_text_header_height"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/font_size_38"
            android:background="@color/signin_header_bg"
            android:text="@string/submit"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>