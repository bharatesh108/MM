<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_invalid_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_45dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/invalid_user_signup"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_username_constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/invalid_user_constraint_signup"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_pls_try_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/lbl_please_try_again"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14" />

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="@dimen/login_et_username_width"
        android:layout_height="@dimen/margin_31dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/font_size_45"
        android:background="@color/signin_header_bg"
        android:text="@string/ok"
        android:textColor="@color/color_white"
        android:textSize="@dimen/font_size_14"
        android:textStyle="bold" />

</LinearLayout>