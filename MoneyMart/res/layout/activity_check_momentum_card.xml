<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_momentum_confirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_55dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/momentum_card_confirmation_details"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14" />

    <TextView
        android:id="@+id/tv_momentum_confirmation_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:layout_marginRight="@dimen/margin_20dp"
        android:layout_marginStart="@dimen/margin_20dp"
        android:layout_marginTop="@dimen/margin_115dp"
        android:fontFamily="sans-serif"
        android:gravity="center"
        android:text="@string/momentum_card_confirmation_question"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14" />

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_23dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="@dimen/margin_113dp"
            android:layout_height="@dimen/margin_31dp"
            android:background="@color/signin_header_bg"
            android:gravity="center"
            style="?android:attr/buttonBarButtonStyle"
            android:text="@string/btn_yes"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" >
        </Button>

        <Button
            android:id="@+id/btn_no"
            android:layout_width="@dimen/margin_113dp"
            android:layout_height="@dimen/margin_31dp"
            android:layout_marginLeft="19dp"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_marginStart="@dimen/margin_16dp"
            android:background="@color/signin_header_bg"
            android:text="@string/btn_no"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" >
        </Button>
    </TableRow>

</LinearLayout>