<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_account_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/account_type_title"
            android:textColor="@color/username_text"
            android:textSize="@dimen/font_size_12" />
        
        <Spinner
            android:id="@+id/spinner_account_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_5dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_5dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:focusable="false"
            android:fontFamily="sans-serif"
            android:entries="@array/account_type_items"
            android:hint="@string/account_type_hint"
            android:textColor="@color/black_color"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_12" 
            android:spinnerMode="dropdown"
            android:dropDownWidth="fill_parent"
            android:background="@drawable/cash_a_check_spinner_bg"
            android:imeOptions="actionDone"/>
        
         <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />
         
        <TextView
            android:id="@+id/tv_new_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/account_no_title"
            android:textColor="@color/username_text"
            android:textSize="@dimen/font_size_12" />

        <EditText
            android:id="@+id/et_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_transparent"
            android:fontFamily="sans-serif"
            android:hint="@string/edit_text_hint"
            android:inputType="number|numberPassword"
            android:maxLength="20"
            android:textColor="@color/black_color"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_confirm_account_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/confirm_account_no_title"
            android:textColor="@color/username_text"
            android:textSize="@dimen/font_size_12" />

        <EditText
            android:id="@+id/et_confirm_account_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_transparent"
            android:fontFamily="sans-serif"
            android:hint="@string/edit_text_hint"
            android:inputType="number|numberPassword"
            android:maxLength="20"
            android:textColor="@color/black_color"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_routing_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/routing_no_title"
            android:textColor="@color/username_text"
            android:textSize="@dimen/font_size_12" />

        <EditText
            android:id="@+id/et_routing_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_transparent"
            android:fontFamily="sans-serif"
            android:hint="@string/edit_text_hint"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="@color/black_color"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/tv_conf_routing_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_10dp"
            android:text="@string/confirm_routing_no_title"
            android:textColor="@color/username_text"
            android:textSize="@dimen/font_size_12" />

        <EditText
            android:id="@+id/et_conf_routing_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/color_transparent"
            android:fontFamily="sans-serif"
            android:hint="@string/edit_text_hint"
            android:inputType="number"
            android:maxLength="9"
            android:textColor="@color/black_color"
            android:textColorHint="@color/account_details_enter_username_data"
            android:textSize="@dimen/font_size_20" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <ImageView
            android:id="@+id/iv_check_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_15dp"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:contentDescription="@string/content_description"
            android:background="@drawable/check_image" />

        <!--
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:background="@android:color/darker_gray" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        -->

        <TextView
            android:id="@+id/text_privacy_policy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:text="@string/privacy_policy_title"
            android:textColor="@color/moneymart_login_forgot_password_text"
            android:textSize="@dimen/login_et_text_size" />

        <Button
            android:id="@+id/btn_add_account"
            android:layout_width="@dimen/login_et_username_width"
            android:layout_height="@dimen/login_text_header_height"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/margin_38dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:background="@color/signin_header_bg"
            android:text="@string/button_add_account_text"
            android:textColor="@color/color_white"
            android:textSize="@dimen/font_size_14"
            android:textStyle="bold" />
        <!-- </RelativeLayout> -->
    </LinearLayout>

</ScrollView>