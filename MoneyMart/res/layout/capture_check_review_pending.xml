<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_capture_check_review_pending"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/moneymart_login_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_review_pending_custom_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_15dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginStart="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_15dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="@string/review_pending_custom_text"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_12" />

        <RelativeLayout
            android:id="@+id/rl_front_check_capture"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_front_ok"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/margin_6dp"
                android:drawableTop="@drawable/download_check"
                android:fontFamily="sans-serif"
                android:text="@string/download_text"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_front_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="sans-serif"
                android:text="@string/front_ok"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_back_check_capture"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_below="@+id/tv_back_ok"
                android:drawablePadding="@dimen/margin_6dp"
                android:drawableTop="@drawable/download_check"
                android:fontFamily="sans-serif"
                android:text="@string/download_text"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_12" />

            <TextView
                android:id="@+id/tv_back_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_20dp"
                android:fontFamily="sans-serif"
                android:text="@string/back_ok"
                android:textColor="@color/personal_details_label"
                android:textSize="@dimen/font_size_14"
                android:textStyle="bold" />
        </RelativeLayout>

        <include
            android:id="@+id/check_details_layout"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin_20dp"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_30dp"
            layout="@layout/layout_check_details"
            android:background="@color/color_white" />
    </LinearLayout>

</ScrollView>