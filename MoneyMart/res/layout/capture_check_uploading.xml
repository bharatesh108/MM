<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/moneymart_login_bg"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_front_check_capture"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_17dp"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_front"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_back_check_capture"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_20dp"
            android:background="@drawable/dash_box" >

            <TextView
                android:id="@+id/tv_capture_check_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="sans-serif" />
        </RelativeLayout>

        <include
            android:id="@+id/check_details_layout"
            android:layout_width="@dimen/camera_bg_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_15dp"
            android:layout_marginRight="@dimen/margin_15dp"
            android:layout_marginTop="@dimen/margin_30dp"
            layout="@layout/layout_check_details"
            android:background="@color/color_white" />

        <TextView
            android:id="@+id/tv_check_uploading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_20dp"
            android:fontFamily="sans-serif"
            android:text="@string/check_uploading"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_14" />

        <ProgressBar
            android:id="@+id/ProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/margin_200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10dp"
            android:layout_marginBottom="@dimen/margin_30dp"
            android:indeterminate="false"
            android:layout_gravity="center"
            android:maxHeight="10dip"
            android:minHeight="10dip"
            android:progress="50"
            android:progressDrawable="@color/progress" />
    </LinearLayout>

</ScrollView>