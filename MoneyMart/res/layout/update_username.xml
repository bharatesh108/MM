<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_update_username_customtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:fontFamily="sans-serif-light"
        android:text="@string/update_username_custom_text"
        android:textColor="@color/personal_details_data"
        android:textSize="@dimen/font_size_13" />

    <LinearLayout
        android:id="@+id/ll_phone_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_update_username_customtext"
        android:layout_marginTop="@dimen/margin_25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:background="@drawable/phone"
            android:contentDescription="@string/phone_content" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:drawableLeft="@drawable/v_line"
            android:drawableStart="@drawable/v_line"
            android:drawablePadding="@dimen/margin_15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/actaul_text_color"
            />
        <!-- android:autoLink="phone" -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_hours_of_operations_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_phone_layout"
        android:layout_marginTop="@dimen/margin_25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_hours_of_operations"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:background="@drawable/clock"
            android:contentDescription="@string/phone_content" />
        
        <TextView
                android:id="@+id/tv_update_username_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif"
                android:textColor="@color/timings_text_color" />
            
            <TextView
                android:id="@+id/tv_update_username_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_10dp"
                android:layout_marginStart="@dimen/margin_10dp"
                android:drawableLeft="@drawable/v_line"
                android:drawablePadding="@dimen/margin_10dp"
                android:drawableStart="@drawable/v_line"
                android:fontFamily="sans-serif"
                android:textSize="@dimen/font_size_13"
                android:textColor="@color/personal_details_data" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mail_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_hours_of_operations_layout"
        android:layout_marginTop="@dimen/margin_25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10dp"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:background="@drawable/send_symbol"
            android:contentDescription="@string/mail_content" />

        <TextView
            android:id="@+id/tv_mail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:drawableLeft="@drawable/v_line"
            android:drawableStart="@drawable/v_line"
            android:drawablePadding="@dimen/margin_15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/actaul_text_color"
            />
        <!-- android:autoLink="email" -->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_weburl_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_mail_layout"
        android:layout_marginTop="@dimen/margin_25dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/iv_weburl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:background="@drawable/web_site"
            android:contentDescription="@string/phone_content" />

        <TextView
            android:id="@+id/tv_weburl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_10dp"
            android:layout_marginStart="@dimen/margin_10dp"
            android:drawableLeft="@drawable/v_line"
            android:drawableStart="@drawable/v_line"
            android:drawablePadding="@dimen/margin_15dp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/actaul_text_color" 
            />
        <!-- android:autoLink="web" -->
    </LinearLayout>

    <TextView
        android:id="@+id/tv_having_trouble_day_french"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_update_username_customtext"
        android:layout_alignStart="@+id/tv_update_username_customtext"
        android:layout_below="@+id/ll_hours_of_operations_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="@dimen/margin_45dp"
        android:fontFamily="sans-serif"
        android:textColor="@color/personal_details_data"
        android:textSize="@dimen/font_size_13"
        android:visibility="gone" />

</RelativeLayout>