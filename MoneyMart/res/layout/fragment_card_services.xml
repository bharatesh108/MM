<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/moneymart_login_bg_style"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_balance_details"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_30dp"
        android:layout_marginEnd="@dimen/margin_15dp"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginRight="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_18dp"
        android:background="@android:color/white" >

        <RelativeLayout
            android:id="@+id/balance_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@color/balance_header"
            android:gravity="center" >

            <TextView
                android:id="@+id/tv_balance"
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_33dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:text="@string/balance_details"
                android:textColor="@color/color_white"
                android:textSize="@dimen/font_size_13"
                android:textStyle="bold" />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_transtion_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_32dp"
        android:fontFamily="sans-serif"
        android:text="@string/transaction_history"
        android:textColor="@color/personal_details_label"
        android:textSize="@dimen/font_size_14"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ll_transaction_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:layout_marginStart="@dimen/margin_15dp"
        android:layout_marginTop="@dimen/margin_20dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="@string/amount"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/date"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_13"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:text="@string/description"
            android:textColor="@color/personal_details_label"
            android:textSize="@dimen/font_size_13"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/moneymart_login_bg"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_transaction_details"
            android:layout_width="match_parent"
            android:layout_weight="3"
            android:layout_height="@dimen/margin_250dp" >
        </ListView>

        <TextView
            android:id="@+id/tv_master_card_holder_agreement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/card_holder_agreement"
            android:layout_marginTop="@dimen/margin_5dp"
            android:textColor="@color/moneymart_login_forgot_password_text"
            android:textSize="@dimen/font_size_13"
            android:visibility="gone"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_ptc_privacy_policy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_2dp"
            android:gravity="center"
            android:layout_weight="1"
            android:text="@string/ptc_privacy_policy"
            android:textColor="@color/moneymart_login_forgot_password_text"
            android:textSize="@dimen/font_size_13"
            android:visibility="gone"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>