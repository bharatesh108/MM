<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Active tab -->
    <item android:drawable="@drawable/tab_bg_selected" android:state_selected="true"/>
    <!-- Inactive tab -->
    <item android:drawable="@drawable/tab_bg_unselected" android:state_selected="false"/>
    <!-- Pressed tab -->
    <item android:drawable="@drawable/tab_bg_selected" android:state_pressed="true"/>
    <item android:drawable="@drawable/tab_bg_unselected" android:state_pressed="false"/>
    <item android:drawable="@drawable/tab_bg_selected" android:state_focused="true"/>
    <item android:drawable="@drawable/tab_bg_unselected" android:state_focused="false"/>
    <item android:drawable="@drawable/tab_bg_unselected"></item>

</selector>